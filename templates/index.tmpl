{% if not tumblr %}
{% extends "base.tmpl" %}
{% else %}
<!-- generated on {{ timestamp }} -->
{% endif %}
{% block body %}
<div class="inner links-body fade-in fade-two">
	<div class="pure-g">
		{% for link in links %}
		{% if link.name %}
		<div class="pure-u-1-1 pure-u-md-{{ link.gridsize }}{% if link.divclasses %} {{ link.divclasses }}{% endif %}"><a class="pure-button button-xlarge button-{{ link.colour }}" href="{% if 'http' not in link.url and tumblr %}/{% endif %}{{ link.url|e }}"{% if 'http' in link.url %} target="_blank"{%endif %}>{{ link.name }}</a></div>
		{% else %}
		<div class="pure-u-1-1 gridfix filler"></div>
		{% endif %}
		{% endfor %}
	</div>
</div>
{% endblock %}
